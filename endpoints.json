{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/league_tables": {
    "description": "serves an array of all league table objects",
    "queries": [],
    "exampleResponse": {
      "league_tables": [
          {
              "division_id": 1,
              "ranks": [
                  {"team_name": "Leicester Wolves", "points": 45, "wins": 12, "draws": 4, "losses": 4,"goals_for": 108, "goals_against": 67},
                  {"team_name": "Old Bags", "points": 38, "wins": 10, "draws": 4, "losses": 6,"goals_for": 102, "goals_against": 77}
              ]
          }
      ]
    }
  },
  "GET /api/fixtures": {
      "description": "serves an array of all fixtures",
      "queries": ["status", "player", "team"],
      "exampleResponse": {
          "fixtures": [
              {
              "fixture_id": 1,
              "match_status": "completed",
              "Team1_name": "Leicester Wolves",
              "Team2_name": "Old Bags",
              "Team1_score": 20, 
              "Team2_score": 10,
              "venue_name": "Alfie Fenables Centre",
              "match_date": "11/5/24"
          }
          ]
      }
  },
  "GET /api/fixtures/:fixture_id": {
      "description": "serves a fixture object corresponding to the given fixture id",
      "exampleResponse": {
          "fixture":
              {
              "fixture_id": 1,
              "match_status": "created",
              "Team1_name": "Leicester Wolves",
              "Team2_name": "Old Bags",
              "Team1_score": 20, 
              "Team2_score": 10,
              "venue_name": "Mior Sufian Centre",
              "match_date": "11/5/24"
          }
      }
  },
  "PATCH /api/fixtures/:fixture_id": {
      "description": "updates and serves a fixture object corresponding to the given fixture id",
      "exampleRequest": {
          "body": {
              "Team1_score": 10, 
              "Team2_score": 6
          }
      },
      "exampleResponse": {
          "fixture":
              {
              "fixture_id": 1,
              "match_status": "completed",
              "Team1_name": "Leicester Wolves",
              "Team2_name": "Old Bags",
              "Team1_score": 10, 
              "Team2_score": 6,
              "venue_name": "Mior Sufian Centre",
              "match_date": "11/5/24"
          }
      }
  },
